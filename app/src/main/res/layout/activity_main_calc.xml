<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/num_view"
            style="@style/TextStyle"
            android:gravity="end|bottom" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="@dimen/column_count_vert">

            <Button
                android:id="@+id/key_clear"
                style="@style/ButtonStyle"
                android:text="@string/key_clear" />

            <Button
                android:id="@+id/key_delete"
                style="@style/ButtonStyle"
                android:text="@string/key_delete" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_div"
                style="@style/ButtonStyle"
                android:text="@string/key_div" />

            <Button
                android:id="@+id/key_mult"
                style="@style/ButtonStyle"
                android:text="@string/key_mult" />

            <Button
                android:id="@+id/key_1"
                style="@style/ButtonStyle"
                android:text="@string/key_1" />

            <Button
                android:id="@+id/key_2"
                style="@style/ButtonStyle"
                android:text="@string/key_2" />

            <Button
                android:id="@+id/key_3"
                style="@style/ButtonStyle"
                android:text="@string/key_3" />

            <Button
                android:id="@+id/key_add"
                style="@style/ButtonStyle"
                android:text="@string/key_add" />

            <Button
                android:id="@+id/key_4"
                style="@style/ButtonStyle"
                android:text="@string/key_4" />

            <Button
                android:id="@+id/key_5"
                style="@style/ButtonStyle"
                android:text="@string/key_5" />

            <Button
                android:id="@+id/key_6"
                style="@style/ButtonStyle"
                android:text="@string/key_6" />

            <Button
                android:id="@+id/key_sub"
                style="@style/ButtonStyle"
                android:text="@string/key_sub" />

            <Button
                android:id="@+id/key_7"
                style="@style/ButtonStyle"
                android:text="@string/key_7" />

            <Button
                android:id="@+id/key_8"
                style="@style/ButtonStyle"
                android:text="@string/key_8" />

            <Button
                android:id="@+id/key_9"
                style="@style/ButtonStyle"
                android:text="@string/key_9" />

            <Button
                android:id="@+id/key_result"
                style="@style/ButtonStyle"
                android:layout_rowSpan="@dimen/double_row_span"
                android:layout_gravity="fill_vertical"
                android:text="@string/key_result" />

            <Button
                android:id="@+id/key_0"
                style="@style/ButtonStyle"
                android:layout_columnSpan="@dimen/double_column_span"
                android:layout_gravity="fill_horizontal"
                android:text="@string/key_0" />

            <Button
                android:id="@+id/key_dot"
                style="@style/ButtonStyle"
                android:text="@string/key_dot" />


        </GridLayout>
    </LinearLayout>
</FrameLayout>