<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    parent="Base.TextAppearance.MaterialComponents.Button."-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>

    </style>

    <style name="TextStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:hint">"@string/temp_string</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/gray</item>



    </style>
</resources>

