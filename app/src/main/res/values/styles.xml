<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    parent="Base.TextAppearance.MaterialComponents.Button."-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="strokeWidth">@dimen/strokeWidth</item>
        <item name="strokeColor">@color/white</item>

    </style>

    <style name="ButtonStyleNigth" parent="ButtonStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
    </style>

    <style name="TextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="strokeWidth">@dimen/strokeWidth</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:hint">"0.0</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="TextStyleNigth" parent="TextStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
    </style>

    <style name="CalcTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="materialButtonStyle">@style/ButtonStyle</item>

    </style>

    <color name="blue">#0954AD</color>
    <dimen name="width_button">75dp</dimen>
    <dimen name="strokeWidth">2dp</dimen>
</resources>

